{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('register.css')}}">
{% endblock %}
{% block body %}
    {{parent()}}
    <div class="form-wrapper">
        {{form_start(registrationForm)}}
        <div>
            {{form_errors(registrationForm,{'attr':{'class':'error'}})}}
        </div>
        <div class="container">
            <div class="left">
                {{form_row(registrationForm.first_name,{'label':'Prénom'})}}
                {{form_row(registrationForm.last_name,{'label':'Nom'})}}
                {{form_row(registrationForm.email)}}
                {{form_row(registrationForm.plainPassword,{'label':'Mot de Passe'})}}
            </div>
            <div class="right">
                {{form_row(registrationForm.phone,{'label':'Numéro de téléphone'})}}
                {{form_row(registrationForm.VTC_card_number,{'label':'Numéro de carte VTC'})}}
                {{form_row(registrationForm.VTC_expired_date,{'label':"Date d'expiration de VTC"})}}
            </div>
        </div>
        {{form_end(registrationForm)}}
    </div>
{% endblock %}