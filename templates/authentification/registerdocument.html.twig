{% extends "authentification/navigation.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('register.css')}}">
{% endblock %}
{% block body %}
    {{parent()}}
    <style>
        input{
            margin:0px;
            padding:0px;
            width:fit-content;
        }
        .container{
            
        }
    </style>
    <div class="form-wrapper">
        {{form_start(form)}}
        {% if form_errors(form) %}
         <div class="error">
            {{form_errors(form)}}
        </div>
        {% endif %}
        
        <div >
                <div class="container">
                {{form_row(form.KBIS,{'label':'KBIS'})}}
                </div>
                <div class="container">
                {{form_row(form.Assurance_RC,{'label':'Assurance RC'})}}
                {{form_row(form.date_validite,{'label':'Date de validit√©'})}}
                </div>
        </div>
        {{form_end(form)}}
    </div>
    <script>
        $('#form_date_validite').datepicker();
    </script>
{% endblock %}