{% extends "authentification/navigation.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('register.css')}}">
{% endblock %}
{% block body %}
    {{parent()}}
    <div class="form-wrapper">
        {{form_start(form)}}
        {% if form_errors(form) %}
         <div class="error">
            {{form_errors(form)}}
        </div>
        {% endif %}
        
       
        <div class="container">
            <div class="left">
                {{form_row(form.name)}}
                {{form_row(form.juridic_form)}}
                {{form_row(form.representant_legal)}}
            </div>
            <div class="right">
                {{form_row(form.number_siret)}}
                {{form_row(form.number_tva,{'label':'TVA Intraccumnautaire'})}}
                {{form_row(form.phone,{'label':'Téléphone'})}}
            </div>
        </div>
        <div class="bottom">
            <p style="text-align:left">Adresse</p>
            {{form_widget(form.adress,{'attr':{'placeholder':'Rue','class':'biginput'}})}}
            {{form_widget(form.ville,{'attr':{'placeholder':'Ville'}})}}
            {{form_widget(form.code_postal,{'attr':{'placeholder':'Code Postal'}})}}
        </div>
        {{form_end(form)}}
    </div>
{% endblock %}